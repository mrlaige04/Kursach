    Layout = "~/Views/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/style/hello.css">
</head>
<body>
    <main>
        
        <div class="first">
            <div class="leftfir">
                <h1>Welcome to your own Recipe Book!</h1>
                <p>With this service you can manage your meals book just in WebSite!</p>
            </div>

            <div class="verticalLine"></div>

            <div class="right">
                <img width="160" height="160" src="https://cdn-icons-png.flaticon.com/512/2937/2937607.png"/>
            </div>
        </div>
        
        <div class="second">
            <h1 style="text-align:center;font-size:60px;">Actions that you can do here</h1>
